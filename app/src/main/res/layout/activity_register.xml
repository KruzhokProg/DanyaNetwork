<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityReg">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#E0E0E0"
        android:paddingTop="20dp"
        android:text="Регистрация"
        android:textAlignment="center"
        android:textColor="#F8981D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEmailReg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/edit_text_custom"
        android:ems="10"
        android:hint="Электронная почта"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/etPassReg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/edit_text_custom"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmailReg" />

    <EditText
        android:id="@+id/etPassConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/edit_text_custom"
        android:ems="10"
        android:hint="Подтверждение пароля"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassReg" />

    <EditText
        android:id="@+id/etCompanyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/edit_text_custom"
        android:ems="10"
        android:hint="Название компании"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassConfirm" />

    <Button
        android:id="@+id/btnNextReg"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginBottom="40dp"
        android:background="#D9D9D9"
        android:fontFamily="@font/rasa"
        android:onClick="Registration"
        android:text="Продолжить"
        android:textAllCaps="false"
        android:textColor="#706969"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etPassReg"
        app:layout_constraintStart_toStartOf="@+id/etPassReg" />

    <Button
        android:id="@+id/btnType"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="28dp"
        android:background="#034EA2"
        android:fontFamily="@font/rasa"
        android:text="Я частник"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/etPassReg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etPassReg"
        app:layout_constraintTop_toBottomOf="@+id/etCompanyName" />

    <ImageView
        android:id="@+id/imgvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/etPassReg"
        app:layout_constraintTop_toBottomOf="@+id/imgvCloseEmail"
        app:srcCompat="@drawable/oc_share_close" />

    <ImageView
        android:id="@+id/imgvClosePassConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/etPassConfirm"
        app:layout_constraintTop_toBottomOf="@+id/imgvPassword"
        app:srcCompat="@drawable/oc_share_close" />

    <ImageView
        android:id="@+id/imgvCloseEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/etEmailReg"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/oc_share_close" />
</androidx.constraintlayout.widget.ConstraintLayout>