<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgvUserAdImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sell1" />

    <TextView
        android:id="@+id/tvRvItemUserAdDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="Продам лягушку"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgvUserAdImage"
        app:layout_constraintTop_toTopOf="@+id/imgvUserAdImage" />

    <TextView
        android:id="@+id/tvRvItemUserAdPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="3 000 рублей"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="@+id/tvRvItemUserAdDesc"
        app:layout_constraintTop_toBottomOf="@+id/tvRvItemUserAdDesc" />
</androidx.constraintlayout.widget.ConstraintLayout>